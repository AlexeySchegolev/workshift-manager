{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript: Build Backend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "TypeScript: Build Frontend", 
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "TypeScript: Watch Backend",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch", "--noEmit"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true
    },
    {
      "label": "TypeScript: Watch Frontend",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch", "--noEmit"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true
    },
    {
      "label": "Build All",
      "dependsOrder": "parallel",
      "dependsOn": [
        "TypeScript: Build Backend",
        "TypeScript: Build Frontend"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}