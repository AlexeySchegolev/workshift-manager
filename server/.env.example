# Server-Konfiguration
NODE_ENV=development
PORT=3001

# PostgreSQL-Datenbank (ERFORDERLICH - keine Fallback-Werte!)
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=workshift_manager
DATABASE_USER=workshift_user
DATABASE_PASSWORD=workshift_password
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Test-Datenbank
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5433
TEST_DATABASE_NAME=workshift_manager_test
TEST_DATABASE_USER=workshift_user
TEST_DATABASE_PASSWORD=workshift_password

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true