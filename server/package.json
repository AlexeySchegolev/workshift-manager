{
  "name": "schichtplanung-server",
  "version": "1.0.0",
  "description": "Backend server for Schichtplanung application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm run db:setup && nodemon -r tsconfig-paths/register src/server.ts",
    "dev:server-only": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "ts-node -r tsconfig-paths/register src/database/migrations.ts",
    "seed": "ts-node -r tsconfig-paths/register -e \"import('./src/database/seed').then(m => m.seedDatabase())\"",
    "db:setup": "npm run docker:up && npm run db:wait && npm run migrate",
    "db:reset": "npm run docker:reset && npm run db:wait && npm run migrate",
    "db:seed": "npm run seed",
    "docker:up": "cd .. && docker-compose up -d",
    "docker:down": "cd .. && docker-compose down",
    "docker:reset": "cd .. && docker-compose down -v && docker-compose up -d",
    "db:wait": "wait-port 5432"
  },
  "keywords": [
    "schichtplanung",
    "shift-planning",
    "healthcare"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "pg-connection-string": "^2.6.2",
    "uuid": "^9.0.1",
    "wait-port": "^1.0.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
